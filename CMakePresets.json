{
  "version": 2,
  "configurePresets": [
    {
      "name": "vcpkg-release-fast",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "architecture": { "value": "x64" },
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "C:/Users/bramb/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_BUILD_TYPE": "Release",

        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",

        "CMAKE_CXX_FLAGS_RELEASE": "/O2 /Ob2 /DNDEBUG /fp:fast /arch:AVX2",
        "CMAKE_C_FLAGS_RELEASE": "/O2 /Ob2 /DNDEBUG /arch:AVX2"
      }
    }
  ]
}
